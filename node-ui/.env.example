# deKAOS Node UI - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Node Daemon API Configuration (Required)
# ============================================

# URL of the dekaos-node daemon API
# Default: http://localhost:3001/api
# Docker: http://daemon:3001/api (internal service name)
# Remote: https://your-daemon-host.com/api
VITE_NODE_API_URL=http://localhost:3001/api

# ============================================
# Supabase Configuration (Optional)
# Only needed for on-chain queries and authentication
# ============================================

# Your Supabase project URL
VITE_SUPABASE_URL=

# Your Supabase anon/public key
VITE_SUPABASE_ANON_KEY=

# ============================================
# Solana Configuration (Optional)
# ============================================

# Solana RPC endpoint
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Network: mainnet-beta, testnet, devnet
VITE_SOLANA_NETWORK=mainnet-beta

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable mock data fallback when daemon is unavailable
# Set to "false" to disable (default: true)
VITE_ENABLE_MOCK_FALLBACK=true

# Enable WebSocket for real-time audio levels
# Set to "false" to use polling instead (default: true)
VITE_ENABLE_WEBSOCKET=true
